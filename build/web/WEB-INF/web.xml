<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>SV_User</servlet-name>
        <servlet-class>Controlador.SV_User</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SV_User</servlet-name>
        <url-pattern>/SV_User</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SV_Chofer</servlet-name>
        <servlet-class>Controlador.SV_Chofer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SV_Chofer</servlet-name>
        <url-pattern>/SV_Chofer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>Controlador.AuthenticationFilter</filter-class> <!-- AsegÃºrate de ajustar la ruta de la clase del filtro -->
    </filter>
    <!-- Mapea el filtro a todas las URL -->
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/AuthenticationFilter</url-pattern>
    </filter-mapping>
</web-app>
